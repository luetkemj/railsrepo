<h1>Makers</h1>
<%= link_to 'Add New Maker', new_maker_path, class: "btn btn-primary", role: "button"  %>

<% count = 1 %>
<div class="row">
<% @makers.each do |maker| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="http://www.fillmurray.com/900/900" alt="...">
      <div class="caption">
        <h3><%= link_to maker.name, maker_path(maker) %></h3>
        <h4><%= maker.role %></h4>
        <p><%= maker.bio %></p>
      </div>
    </div>
  </div>

<% end %>
</div>